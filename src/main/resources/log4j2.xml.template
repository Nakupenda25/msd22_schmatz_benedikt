<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="Calculator">
    <Appenders>
        <File name="Calculator" fileName="logs/myapp.log">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Calculator"/>
        </Root>
    </Loggers>
</Configuration>